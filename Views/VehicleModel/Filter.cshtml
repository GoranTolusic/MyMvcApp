@{
    ViewData["Title"] = "Vehicle";
    var vehicleModels = (List<VehicleModel>)ViewData["VehicleModels"];
}

<div class="text-center">
    <h1 class="display-4">Filter</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div class="container">
        <div class="row">
            @foreach (var vehicleModel in vehicleModels)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@vehicleModel.Name</h5>
                            <a href="/VehicleModel/Get/@vehicleModel.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
